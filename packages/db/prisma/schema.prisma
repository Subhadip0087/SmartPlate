generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id         Int      @id @unique @default(autoincrement())
  name       String
  email      String   @unique
  enrollment Int      @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  avatar     String
  avatar_id  String
  isAdmin    Boolean  @default(false)
  orders     orders[] @relation(name: "orderedByUsers")
}

model items {
  id          Int           @id @unique @default(autoincrement())
  name        String
  price       Int
  stock       Int
  updatedAt   DateTime
  createdAt   DateTime
  image       String
  image_id    String
  description String?
  category    itemsCategory
  is_veg      Boolean
}

model orders {
  id         Int         @id @unique @default(autoincrement())
  userId     Int
  user       user        @relation(name: "orderedByUsers", fields: [userId], references: [id])
  createdAt  DateTime
  updatedAt  DateTime
  status     OrderStatus
  reting     Int?
  quantity   Int
  TotalPrice Int
  items      Json
}

enum OrderStatus {
  Placed
  Processing
  Completed
}

enum itemsCategory {
  mainCourse
  snacks
}
